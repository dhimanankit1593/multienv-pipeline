pipeline {
    agent { label 'dev' }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/dhimanankit1593/multienv-pipeline.git'
            }
        }

        stage('Apache PHP Config') {
            steps {
                sh '''
                  sudo a2enmod php* || true
                  sudo sed -i 's/^DirectoryIndex.*/DirectoryIndex index.php index.html index.cgi index.pl/' \
                  /etc/apache2/mods-enabled/dir.conf
                  sudo rm -f /var/www/html/index.html
                  sudo systemctl restart apache2
                '''
            }
        }

        stage('DEV Deploy') {
            steps {
                sh 'sudo cp index.php /var/www/html/index.php'
            }
        }
    }

    post {
        success {
            echo "DEV SUCCESS → Triggering STAGING"
            build job: 'php-staging-pipeline', wait: false
        }
        failure {
            echo "DEV FAILED → STOP"
        }
    }
}
