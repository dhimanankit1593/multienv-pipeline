pipeline {
    agent { label 'dev' }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/dhimanankit1593/multienv-pipeline.git'
            }
        }

        stage('DEV Deploy') {
            steps {
                sh '''
                  sudo cp index.php /var/www/html/index.php
                  sudo systemctl restart apache2
                '''
            }
        }
    }

    post {
        success {
            echo "DEV SUCCESS → Triggering STAGING"
            build job: 'php-staging-pipeline', wait: false
        }
        failure {
            echo "DEV FAILED → STOP"
        }
    }
}
